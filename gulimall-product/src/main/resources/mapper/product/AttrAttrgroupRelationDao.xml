<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="cn.edu.zjut.product.dao.AttrAttrgroupRelationDao">

    <!-- 可根据自己的需求，是否要使用 -->
    <resultMap type="cn.edu.zjut.product.entity.AttrAttrgroupRelationEntity" id="attrAttrgroupRelationMap">
        <result property="id" column="id"/>
        <result property="attrId" column="attr_id"/>
        <result property="attrGroupId" column="attr_group_id"/>
        <result property="attrSort" column="attr_sort"/>
    </resultMap>

    <delete id="deleteBatchRelation">
        DELETE
        FROM pms_attr_attrgroup_relation
        WHERE
        <foreach collection="attrAttrgroupRelationEntities" item="attrAttrgroupRelationEntity" separator=" OR ">
            (attr_id=#{attrAttrgroupRelationEntity.attrId} AND attr_group_id=#{attrAttrgroupRelationEntity.attrGroupId})
        </foreach>
    </delete>
</mapper>